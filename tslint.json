{
  "extends": "tslint:recommended",
  "rules": {
    "semicolon": [
      true,
      "always"
    ],
    "jsdoc-format": true,
    "import-spacing": true,
    "eofline": true,
    "align": [
      true,
      "parameters",
      "statements"
    ],
    "unnecessary-else": true,
    "interface-name": [
      true,
      "always-prefix"
    ],
    "class-name": true,
    "triple-equals": true,
    "switch-default": true,
    "no-unused-expression": true,
    "no-async-without-await": true,
    "ordered-imports": true,
    "forin": true,
    "curly": true,
    "no-parameter-reassignment": true,
    "array-type": false,
    "arrow-parens": false,
    "deprecation": {
      "severity": "warn"
    },
    "import-blacklist": [
      true,
      "rxjs/Rx"
    ],
    "max-classes-per-file": false,
    "max-line-length": [
      true,
      140
    ],
    "member-access": false,
    "member-ordering": [
      true,
      {
        "order": [
          "static-field",
          "instance-field",
          "static-method",
          "instance-method"
        ]
      }
    ],
    "no-consecutive-blank-lines": false,
    "no-console": [
      true,
      "debug",
      "info",
      "time",
      "timeEnd",
      "trace",
      "log"
    ],
    "no-empty": false,
    "no-inferrable-types": [
      true,
      "ignore-params"
    ],
    "no-non-null-assertion": true,
    "no-redundant-jsdoc": true,
    "no-switch-case-fall-through": true,
    "no-var-requires": false,
    "object-literal-key-quotes": [
      true,
      "as-needed"
    ],
    "object-literal-sort-keys": false,
    "quotemark": [
      true,
      "single"
    ],
    "trailing-comma": false,
    "whitespace": [
      true,
      "check-module"
    ]
  }
}
